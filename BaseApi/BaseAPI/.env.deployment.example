# ===================================
# Deployment Configuration
# ===================================
# Copy this file to .env.deployment and fill in your actual values
# NEVER commit .env.deployment to source control!

# SSH Connection Details
SSH_USER=<UBUNTU_USER>
SSH_HOST=<UBUNTU_IP>
SSH_PORT=22

# Server Paths
SERVER_TEMP_PATH=/tmp
SERVER_APP_PATH=/var/www/<APPLICATION_FOLDER_NAME>
SERVICE_NAME=<SERVICE_NAME>

# Application Settings
APP_ZIP_NAME=net-api.zip
LOCAL_PUBLISH_PATH=./publish

# Optional: SSH Key Path (if using key-based authentication)
# SSH_KEY_PATH=~/.ssh/id_rsa

# Production Database Configuration
# These will be used to generate appsettings.Production.json during deployment
DB_HOST=
DB_PORT=5432
DB_NAME=BaseApiDb_Prod
DB_USERNAME=
DB_PASSWORD=
