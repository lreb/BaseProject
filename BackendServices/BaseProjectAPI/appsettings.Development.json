{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Debug" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\BaseProjectLogs\\log-.txt",
          "rollingInterval": "Day",
          "shared": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "BaseProjectLogs"
    }
  },
  "Cors": {
    "AllowedOrigin": [
      "http://localhost:4200",
      "http://localhost:4201",
      "http://localhost:4202"
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=127.0.0.1;port=5432;user id=postgres;password=tdev1379*;database=BaseProject;pooling=true"
  }
}
